<%= link_to car_path(car), class:"text-decoration-none link-dark" do %>
  <div class="card-car">
    <%= cl_image_tag car.photos.first.key, height: 300, width: 400, crop: :fill %>
    <div class="card-car-infos">
      <div class="d-flex justify-content-between align-items-center">
        <h2><strong><%= car.brand%></strong> <%= car.model %></h2>
        <h5><strong>$<%= car.rate %></strong><span class="text-grey">/night</span></h5>
      </div>
      <h6 class="mt-1"><i class="fa-solid fa-map-pin"></i> <%= car.user.address %> | <%= car.year %></h6>
      <div class="mt-3">
      </div>
    </div>
  </div>
<% end %>
