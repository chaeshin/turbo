<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.pexels.com/photos/6462662/pexels-photo-6462662.png?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <h5>...</h5>
        <p>...</p>
        <%= link_to 'Book this car now', cars_path, class: "m-1 p-2 border rounded-pill shadow-sm btn btn-light align-item-center" %>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://i.pinimg.com/564x/f0/b7/9c/f0b79c7b8e5e6c04535f30c1ae986cef.jpg" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <h5>...</h5>
        <p>...</p>
        <%= link_to 'Book this car now', cars_path, class: "m-1 p-2 border rounded-pill shadow-sm btn btn-light align-item-center" %>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://i.pinimg.com/originals/48/43/bd/4843bd166ae7e36364292a25c712736d.jpg" alt="Third slide">
      <div class="carousel-caption d-none d-md-block">
        <h5>...</h5>
        <p>...</p>
        <%= link_to 'Book this car now', cars_path, class: "m-1 p-2 border rounded-pill shadow-sm btn btn-light align-item-center" %>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
