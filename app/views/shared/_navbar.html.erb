<div class="navbar navbar-expand-sm navbar-light navbar-lewagon align-items-center">
  <div class="container-fluid">
    <%= link_to "TURBO", "/", class: "navbar-brand text-white"%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav align-items-center me-auto">
        <li class="nav-item active">
          <%= link_to "All cars", "/cars", class: "m-1 p-2 text-decoration-none text-white align-item-center" %>
        </li>
        <li class="nav-item m-1 p-2 text-decoration-none text-white align-item-center" type="link" data-insert-review-target='link' data-bs-toggle="collapse" data-bs-target="#reviewCreate" aria-expanded="false" aria-controls="reviewCreate">
          <%= link_to "Brands", "/cars", class: "m-1 p-2 text-decoration-none text-white align-item-center" %></li>
        <li class="nav-item">
          <%= link_to "Locations", "/cars", class: "m-1 p-2 text-decoration-none text-white align-item-center" %>
        </li>
        <li class="nav-item m-1 p-2 text-decoration-none text-white align-item-center" type="icon" data-insert-review-target='link' data-bs-toggle="collapse" data-bs-target="#reviewSearch" aria-expanded="false" aria-controls="reviewSearch">
          <%= link_to "/cars", class: "m-1 p-2 text-decoration-none text-white align-item-center" do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "List your car", "/owner/bookings", class: "m-1 p-2 border rounded-pill shadow-sm btn btn-light align-item-center" %>
          </li>
          <li class="nav-item">
            <li class="nav-item">
              <%= link_to "See my bookings", "/bookings/", class: "m-1 p-2 border rounded-pill shadow-sm btn btn-light align-item-center" %>
            </li>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Vehicles", "#", class: "dropdown-item text-secondary" %>
              <%= link_to "Another action", "#", class: "dropdown-item text-secondary" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-secondary" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="collapse" id="reviewCreate">
  <div class="card card-body">
    <div class="row justify-content-center">
      <%= link_to cars_path, class:"text-decoration-none link-dark" do %>
        <div>
          <img src="https://cdn.vectorstock.com/i/1000v/06/59/new-lamborghini-latest-logo-eps-10-vector-51400659.jpg" class="logo">
          <p>Lamborghini</p>
        </div>
      <% end %>
      <%= link_to 'Bugatti', cars_path, class: "m-1 p-2 text-decoration-none link-dark align-item-center"%>
      <%= link_to 'McLaren', cars_path, class: "m-1 p-2 text-decoration-none link-dark align-item-center"%>
    </div>
  </div>
</div>

<div class="collapse" id="reviewSearch">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: cars_path, method: :get, class: "d-flex my-3" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type location or a brand"
          %>
        <%= submit_tag "Search", name: "", class: "border shadow-sm btn btn-light align-item-center" %>
      <% end %>
    </div>
  </div>
</div>
