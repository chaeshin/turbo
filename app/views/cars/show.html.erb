<div class="banner" style="background-image: url('<%= @car.photo %>');">
  <h1>Car Details</h1>
</div>
<div class="container-wrapper">
  <div class="card-car">
    <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-car-infos">
      <div class="d-flex justify-content-between">
        <h2><strong><%= @car.brand %>: <%= @car.model %></strong></h2>
        <h5><strong>Â¥<%= @car.rate %>/day</strong></h5>
      </div>
      <h5><%= @car.user.address %></h5>
      <div class="mt-3">
        <% description = @car.parsed_description.each do |line|%>
          <p><%= line  %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="card">
      <h2>Create Booking</h2>
      <%= simple_form_for [@car, @booking] do |form| %>
        <div class="mb-3">
          <%= form.label :start_date %>
          <%= form.date_select :start_date, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= form.label :end_date %>
          <%= form.date_select :end_date, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= form.submit "Create Booking", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
