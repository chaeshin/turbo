<div class="navbar navbar-expand-sm navbar-light navbar-lewagon align-items-center py-0">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" style="flex: 1">
      <%= link_to "TURBO", "/", class: "navbar-brand text-white p-3"%>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="navbar-nav align-items-center me-auto">
        <li class="nav-item active p-3">
          <%= link_to "All cars", "/cars", class: "text-decoration-none text-white align-item-center" %>
        </li>
        <li class="nav-item p-3 text-decoration-none text-white align-item-center" type="link" data-insert-review-target='link' data-bs-toggle="collapse" data-bs-target="#reviewCreate" aria-expanded="false" aria-controls="reviewCreate">
          <%= link_to "Brands", "/cars", class: "text-decoration-none text-white align-item-center" %></li>
        <li class="nav-item p-3 text-decoration-none text-white align-item-center" type="link" data-insert-review-target='link' data-bs-toggle="collapse" data-bs-target="#reviewLocation" aria-expanded="false" aria-controls="reviewLocation">
          <%= link_to "Locations", "/cars", class: "text-decoration-none text-white align-item-center" %>
        </li>
      </ul>
    </div>
    <div style="flex: 1" >
      <div class="row">
        <%= form_with url: cars_path, method: :get, class: "d-flex align-items-center" do %>
          <h6 class="pt-1 m-2"><i class="fa-solid fa-magnifying-glass text-white"></i></h6>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded-pill",
            placeholder: "Type keyword"
            %>
          <%= submit_tag "Search", name: "", class: "m-3 btn btn-light shadow-sm align-item-center border rounded-pill" %>
        <% end %>
      </div>
    </div>
    <div class="collapse navbar-collapse justify-content-end" style="flex: 1" id="navbarSupportedContent">
      <li class="nav-item active p-3">
        <%= link_to "List your car", new_car_path, class: "text-decoration-none text-white align-item-center" %>
      </li>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "See my bookings", "/bookings/", class: "dropdown-item text-secondary" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-secondary" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="collapse" id="reviewCreate">
  <div>
    <div class="row justify-content-between">
      <%= link_to cars_path, class:"text-decoration-none link-dark" do %>
        <div>
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtuhjb7P7sl7uoYaoa0Rd9DSfWF_xD9OfKcA&s" class="logo">
          <p>Lamborghini</p>
        </div>
      <% end %>
      <%= link_to cars_path, class:"text-decoration-none link-dark" do %>
        <div>
          <img src="https://i.pinimg.com/736x/b3/51/fb/b351fb832347519de9172498d7439992.jpg" class="logo">
          <p>Bugatti</p>
        </div>
      <% end %>
      <%= link_to cars_path, class:"text-decoration-none link-dark" do %>
        <div>
          <img src="https://i.pinimg.com/736x/cc/9f/b9/cc9fb95f2dc4015f2582d3c6d309127d.jpg" class="logo">
          <p>McLaren</p>
        </div>
      <% end %>
      <%= link_to cars_path, class:"text-decoration-none link-dark" do %>
        <div>
          <img src="https://i.pinimg.com/564x/1f/d0/7e/1fd07e1786e734eea0a974cf90080861.jpg" class="logo">
          <p>Ferrari</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="collapse" id="reviewLocation">
  <div class="card card-body">
    <div class="row justify-content-center">
      <%= link_to 'Tokyo', cars_path, class: "m-1 p-2 text-decoration-none link-dark align-item-center"%>
      <%= link_to 'New York City', cars_path, class: "m-1 p-2 text-decoration-none link-dark align-item-center"%>
      <%= link_to 'Monaco', cars_path, class: "m-1 p-2 text-decoration-none link-dark align-item-center"%>
    </div>
  </div>
</div>
<div class="collapse" id="reviewSearch">
</div>
